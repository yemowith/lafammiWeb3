{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./_build/ts",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "./config/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
